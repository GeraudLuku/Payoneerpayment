<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/paymenth_method_item_shape"
    android:padding="15dp"
    android:focusable="true">

    <ImageView
        android:id="@+id/payment_image"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:contentDescription="the image of the payment method"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/logo3x" />

    <TextView
        android:id="@+id/payment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/grouping"
        app:layout_constraintStart_toEndOf="@+id/payment_image"
        app:layout_constraintTop_toTopOf="@+id/payment_image"
        tools:text="American Express" />

    <TextView
        android:id="@+id/grouping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/payment_image"
        app:layout_constraintEnd_toEndOf="@+id/payment_label"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/payment_image"
        tools:text="DEBIT CARD" />


</androidx.constraintlayout.widget.ConstraintLayout>